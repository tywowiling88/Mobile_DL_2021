<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul8b">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <TextView
            android:id="@+id/tvCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="300dp"
            android:textColor="#FFFFFF"
            android:background="@color/yellow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnHitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitam"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:onClick="gantiWarnaBackground"
            android:layout_marginLeft="10px"/>

        <Button
            android:id="@+id/btnMerah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merah"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:onClick="gantiWarnaBackground"
            android:layout_marginLeft="10px"/>

        <Button
            android:id="@+id/btnBiru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biru"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:onClick="gantiWarnaBackground"
            android:layout_marginLeft="10px"/>
        <Button
            android:id="@+id/btnHijau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hijau"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:onClick="gantiWarnaBackground"
            android:layout_marginLeft="10px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTambahCounter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:backgroundTint="#808080"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/btnResetCounter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:backgroundTint="#808080"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>